{
  "name": "swift-todo",
  "type": "module",
  "private": true,
  "description": "Prototype of a web application based on React and Framer Motion that lets you manage a simple to-do list",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Kilian Braquin <kbraquin@indiebaie.com>",
  "engines": {
    "node": ">=22.12.0",
    "pnpm": "^9.4.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "vite preview",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint src"
  },
  "dependencies": {
    "@floating-ui/react-dom": "^2.1.2",
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.14.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zundo": "^2.3.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@svgr/webpack": "^8.1.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1",
    "vite": "^6.0.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}